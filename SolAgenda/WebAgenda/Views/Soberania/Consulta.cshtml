@using Entidades
@model List<E_Soberania>

<div class="card card-warning card-outline">
    <div class="card-header"><h5 class="animate__animated animate__fadeInUp animate__slow">REAA</h5></div>
    <div class="card-body">

        <a href="/Soberania/IrAgregar" class="btn btn-warning text-white mb-3">Agregar</a>

        <table>
            <thead>
                <tr>
                    <th>SOBERANIA</th>
                    <th>RESPONSABLE</th>
                    <th>CARGO</th>
                    <th>TELEFONO</th>
                    <th>CORREO</th>
                    <th>DIRECCION</th>

                </tr>
            </thead>
            <tbody>
                @foreach (E_Soberania item in Model)
                {
                    <tr>
                        <td>@item.Soberania</td>
                        <td>@item.Responsable</td>
                        <td>@item.Cargo</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>@item.Direccion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>