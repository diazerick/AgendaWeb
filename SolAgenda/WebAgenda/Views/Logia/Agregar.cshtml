
<div class="card card-warning card-outline">
    <div class="card-header"><h5 class="animate__animated animate__fadeInUp animate__slow">Nueva Logia</h5></div>
    <div class="card-body">
        <form action="/Logia/Agregar" method="post">
            <div class="form-group">
                <label>Nombre</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><b>N</b></span>
                    </div>
                    <input type="text" class="form-control" name="Logia">
                </div>
            </div>
            <div class="form-group">
                <label>Responsable</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-user"></i></span>
                    </div>
                    <input type="text" class="form-control" name="Responsable">
                </div>
            </div>
            <div class="form-group">
                <label>Cargo</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><b>C</b></span>
                    </div>
                    <input type="text" class="form-control" name="Cargo">
                </div>
            </div>
            <div class="form-group">
                <label>Telefono</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fas fa-phone"></i></span>
                    </div>
                    <input type="text" class="form-control" name="Telefono">
                </div>
            </div>
            <div class="form-group">
                <label>Correo</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-envelope"></i></span>
                    </div>
                    <input type="text" class="form-control" name="Correo">
                </div>
            </div>
            <div class="form-group">
                <label>Dirección</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><b>D</b></span>
                    </div>
                    <input type="text" class="form-control" id="Direccion" name="Direccion">
                </div>
            </div>
            <input type="submit" class="btn btn-lg btn-warning" value="Agregar" />
        </form>
    </div>
</div>
