@using Entidades
@model List<E_Logia>

<h3>Gran Supremo Consejo</h3>

<div class="card card-warning card-outline">
    <div class="card-header"><h4 class="animate__animated animate__fadeInUp animate__slow">Logias Por Estado</h4></div>
    <div class="card-body">
        <a href="/Logia/IrAgregar" class="btn btn-warning text-white mb-3">Agregar</a>

        @if (TempData["correcto"] != null)
        {
            <div class="alert alert-success">
                <b>@TempData["correcto"]</b>
            </div>
        }

        <table>
            <thead>
                <tr>
                    <th>LOGIA</th>
                    <th>RESPONSABLE</th>
                    <th>CARGO</th>
                    <th>TELEFONO</th>
                    <th>CORREO</th>
                    <th>DIRECCION</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (E_Logia item in Model)
                {
                    <tr>
                        <td>@item.Logia</td>
                        <td>@item.Responsable</td>
                        <td>@item.Cargo</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>@item.Direccion</td>
                        <td>
                            <a href="/Logia/ObtenerParaEditar?idLogia=@item.IdLogia" class="btn btn-info">Editar</a>
                            <a href="/Logia/Borrar?idLogia=@item.IdLogia" class="btn btn-danger">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

